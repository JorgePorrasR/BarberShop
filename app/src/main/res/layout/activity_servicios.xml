<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/elfondo"
    tools:context=".ServiciosActivity">

    <TextView
        android:id="@+id/textView"
        android:textColor="@color/Blanco"
        android:textSize="40dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenida"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/txtUser"
        android:textColor="@color/Blanco"
        android:textSize="30dp"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/ver_carrito"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnCarrito"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dis1"
        android:text="@string/ver_carrito"
        tools:layout_editor_absoluteY="193dp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/lvlServicios"
        android:layout_width="257dp"
        android:layout_height="213dp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="72dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCarrito" />
</RelativeLayout>